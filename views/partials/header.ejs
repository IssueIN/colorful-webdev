<header>
  <nav class="header-row-top">
    <div class="logo-container">
      <a href="/">COLORFUL</a>
      <div></div>
    </div>
    <div class="header-search-container">
      <form action="/products/results" method="GET">
        <input type="text" name="search" value="<%= searchOptions.search %>" placeholder="<%= t("searchBarPlaceholder") %>" class="header-search-bar">
        <button type="submit" class="header-search-btn" id="search-button"><img src="/icons/search-icon-green.png" height="20"></button>
      </form>
    </div>
    <ul class="links-row-container">
      <li><a href="/about-us"><%= t("about") %></a></li>
