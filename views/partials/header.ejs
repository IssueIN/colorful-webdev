  </nav>
  <nav class="header-row-bottom">
    <ul>
      <li>
        <a href="/products"><%= t("all") + t("products") %>&dtrif;</a>
        <%- include('dropdown', items = categories) %>
      </li>
      <li>
        <a href="/manufacturers"><%= t("manufacturers") %>&dtrif;</a>
        <%- include('dropdown', items = manufacturers) %>
      </li>
      <li>
        <a href="/solutions"><%= t("solutions") %>&dtrif;</a>
        <%- include('dropdown', items = solutions) %>
      </li>
    </ul>
