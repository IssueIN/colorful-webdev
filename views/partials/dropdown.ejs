<ul class="dropdown">
  <% items.forEach(item => { %>
    <% if (item && item.name && item.name[lang]) { %>
      <li>
        <a href="<%='/solutions?name=' + item.name[lang] %>">
          <%= item.name[lang] %>
        </a>
      </li>
    <% } else if (item && item.name) { %>
      <li>
        <a href="<%='/products?manufacturer=' + item.name %>">
          <%= item.name %>
        </a>
      </li>
    <% } else { %>
      <li><a href="/products?category=<%= item %>"><%= item %></a></li>
    <% } %>
  <% }) %>
</ul>